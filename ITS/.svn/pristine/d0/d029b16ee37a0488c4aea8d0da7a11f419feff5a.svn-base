<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itis.activitys.ReleaseActivity">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_se_50">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_se_16"
            android:text="@string/cancel"
            android:padding="@dimen/height_se_12"

            android:textColor="#393939"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_se_16"
            android:text="@string/publish"
            android:padding="@dimen/height_se_12"
            android:layout_centerHorizontal="true"
            android:textColor="#393939"/>
        <TextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_se_16"
            android:text="@string/publish_send"
            android:padding="@dimen/height_se_12"
            android:layout_alignParentRight="true"
            android:textColor="#23b1c9"/>
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/top"
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_se_1"
        android:background="@mipmap/nav_xian"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/second"
        android:layout_marginBottom="@dimen/height_se_50"
        android:background="@color/color_fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/relase_context"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_se_105"
                android:layout_below="@+id/publish_name"
                android:background="@drawable/publish_context_color"
                android:gravity="left|top"
                android:hint="@string/publish_context"
                android:maxLength="200"
                android:paddingLeft="@dimen/height_se_10"
                android:paddingTop="@dimen/height_se_10"
                android:textColor="@color/color_080" />

            <com.itis.view.GridViewScrollView
                android:id="@+id/relase_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relase_context"
                android:background="@drawable/publish_context_color"
                android:numColumns="3"
                android:paddingTop="@dimen/height_se_4"
                android:horizontalSpacing="@dimen/height_se_4"
                android:verticalSpacing="@dimen/height_se_4"
                android:paddingBottom="@dimen/height_se_4"
                android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_below="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_se_1"
        android:background="@mipmap/nav_xian"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_se_50">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_icon1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_icon2"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_icon3"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/position_select"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.itis.widgets.PreviewViewPager
        android:id="@+id/preview_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_se_25"
            android:background="@color/color_000" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MyToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_se_48"
            android:background="@color/color_a3e">

            <TextView
                android:id="@+id/done_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_se_32"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/height_se_8"
                android:background="@drawable/btn_round_green_selector"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/release_ok"
                android:textColor="@color/white_text_selector"
                android:textSize="@dimen/text_se_15" />
        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/select_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_se_48"
        android:layout_gravity="bottom"
        android:background="@color/color_a3e"
        android:gravity="center_vertical">


        <CheckBox
            android:id="@+id/checkbox_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:button="@drawable/checkbox_checktor"
            android:gravity="center"
            android:paddingLeft="@dimen/height_se_8"
            android:paddingRight="@dimen/height_se_16"
            android:text="@string/choose"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/text_se_16" />
    </RelativeLayout>
</FrameLayout>
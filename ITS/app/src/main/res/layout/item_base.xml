<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_wraps">
    <RelativeLayout
        android:id="@+id/rlout_meiyisi"
        android:layout_width="wrap_content"
        android:layout_height="22dp">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="22dp"
            android:src="@drawable/meiyisi" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mei"
                android:textColor="@color/color_fff"
                android:textSize="13sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yi_si"
                android:textColor="@color/color_fff"
                android:textSize="8sp" />
        </LinearLayout>

    </RelativeLayout>
    <!--没意思结束-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="12dp"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/lout_meiyisi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:orientation="vertical"
            android:layout_weight="0.2">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/round_left" />

            <TextView
                android:id="@+id/tv_meiyisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="aslkfnasdlkfn"
                android:textColor="@color/color_030"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lout_youyisi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="0.8"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/round_right" />

            <TextView
                android:id="@+id/tv_youyisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:text="aslkfnasdlkfn"
                android:textColor="@color/color_1c9"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>



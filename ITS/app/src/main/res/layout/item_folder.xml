<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/height_se_16"
    android:paddingRight="@dimen/height_se_16"
    android:paddingTop="@dimen/height_se_8"
    android:paddingBottom="@dimen/height_se_8"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/first_image"
        android:layout_width="@dimen/height_se_74"
        android:layout_height="@dimen/height_se_74"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/height_se_16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_se_16"
            android:textColor="@color/color_333"
            android:text="@string/camera"/>

        <TextView
            android:id="@+id/image_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/height_se_13"
            android:textColor="@color/color_999"
            android:text="12 å¼ "/>
    </LinearLayout>

    <ImageView
        android:id="@+id/is_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/radio_button"/>
</LinearLayout>
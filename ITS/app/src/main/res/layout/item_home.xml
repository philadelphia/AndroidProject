<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_wrap"
    android:background="@color/color_fff"
    >
    <RelativeLayout
        android:id="@+id/rl_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_se_70"
        android:gravity="center_vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/firstFragment_iv"
        android:layout_width="@dimen/height_se_35"
        android:layout_height="@dimen/height_se_35"
        android:src="@drawable/user_error"
        android:layout_marginLeft="@dimen/height_se_13" />
        <TextView
            android:id="@+id/tv_item_name"
           style="@style/activity_wraps"
            android:text="ssssssssss"
            android:layout_toRightOf="@+id/firstFragment_iv"
            android:layout_marginLeft="@dimen/height_se_13"
            />
        <ImageView
            android:id="@+id/iv_contry"
            android:layout_width="@dimen/height_se_25"
            android:layout_height="@dimen/height_se_15"
            android:layout_toRightOf="@+id/tv_item_name"
            android:background="@drawable/america"
            android:layout_marginLeft="@dimen/height_se_8"
            android:layout_marginTop="@dimen/height_se_3"/>
        <TextView
            android:id="@+id/tv_time"
            style="@style/activity_wraps"
            android:layout_below="@+id/tv_item_name"
            android:text="222"
            android:layout_toRightOf="@+id/firstFragment_iv"
            android:layout_marginLeft="@dimen/height_se_13"/>
        <RelativeLayout
            android:id="@+id/ib_xiaoxi"
            android:layout_width="@dimen/height_se_40"
            android:layout_height="@dimen/height_se_40"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/height_se_13"
            android:layout_marginTop="@dimen/height_se_7"
            android:gravity="center"
            android:visibility="visible"
            >
        <ImageButton
            style="@style/activity_wraps"
            android:background="@drawable/home_comment"
            />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_guanzhu"
            android:layout_width="@dimen/height_se_50"
            android:layout_height="@dimen/height_se_27"
            android:background="@drawable/content_button_default_guanzhu"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/height_se_13"
            android:gravity="center"
            android:tag="off"
            android:textSize="@dimen/text_se_13"
            android:textColor="@color/color_7dc"
            android:visibility="gone"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_content"
       style="@style/activity_wraps"
        android:layout_below="@+id/rl_out"
        android:text="ssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
        android:layout_marginLeft="@dimen/height_se_16"
        android:layout_marginRight="@dimen/height_se_16"
        android:textColor="@color/color_939"
        android:textSize="@dimen/height_se_16"/>
    <TextView
        android:id="@+id/tv_fanyi"
        style="@style/activity_wraps"
        android:text="ssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
        android:layout_marginLeft="@dimen/height_se_16"
        android:layout_marginRight="@dimen/height_se_16"
        android:layout_below="@+id/tv_content"
        android:textColor="@color/color_87c"
        android:textSize="@dimen/height_se_16"
        />
</RelativeLayout>
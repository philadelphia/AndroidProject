<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/GFNews"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:padding="@dimen/height_se_15"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/user_photo"
            android:src="@drawable/user_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/user"
            android:layout_marginLeft="@dimen/height_se_10"
            android:layout_toRightOf="@+id/user_photo"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/user_name"
                android:text="Name"
                android:textColor="@color/color_939"
                android:textSize="@dimen/text_se_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/height_se_6"
                android:id="@+id/content"
                android:textSize="@dimen/text_se_14"
                android:text="content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/height_se_10"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user_date"
                android:text="3-4"
                android:textColor="@color/color_939"
                android:textSize="@dimen/text_se_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/height_se_6"
                android:id="@+id/number"
                android:textSize="@dimen/text_se_14"
                android:text="3"
                android:gravity="center"
                android:background="@drawable/msg"
                android:layout_width="@dimen/height_se_18"
                android:layout_height="@dimen/height_se_18" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>